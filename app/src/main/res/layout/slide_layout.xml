<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        app:srcCompat="@drawable/gd" />

    <TextView
        android:id="@+id/slide_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="times new roman"
        android:text="Introduction"
        android:textColor="#C51162"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slide_desc"
        android:layout_width="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="209dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textAlignment="center"
        android:fontFamily="Georgia"
        android:text="The traditional way of manually monitoring the waste was the complex process and utilizes more human effort, time and cost.\n
The basic project idea is to design a Smart Waste Detection System.\nSystem will automatically detect the garbage from the picture taken by the responsible-citizens.\n\n
It will also have real-time monitoring capabilities, which would be remotely managed by the waste collectors (Garbage truck driver).\n\n
The app is developed in the year of 2018."
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_height="match_parent" />
</RelativeLayout>